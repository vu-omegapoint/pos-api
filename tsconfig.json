{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es2018", "esnext.asynciterable", "DOM"],
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./lib",
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./lib", "./node_modules"]
}
